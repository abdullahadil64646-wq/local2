# ===========================================
# SaaS Local Grocery Store Platform
# Environment Configuration Template
# Copy this to .env and configure your values
# ===========================================

# ===== DATABASE CONFIGURATION =====
# MongoDB (Current Implementation)
MONGODB_URI=mongodb://localhost:27017/saas-local-stores
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
DB_NAME=saas-local-stores

# Redis (For Caching & Sessions)
REDIS_URL=redis://localhost:6379

# ===== AUTHENTICATION & SECURITY =====
JWT_SECRET=your-super-secure-jwt-secret-here-2024
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here-2024
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
ADMIN_EMAIL=admin@yourstore.com
ADMIN_PASSWORD=admin123

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# ===== SUPABASE CONFIGURATION (For Migration) =====
# These values will be used in migration documentation
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===== PAYMENT GATEWAYS =====
# JazzCash Payment Gateway
JAZZCASH_MERCHANT_ID=your_jazzcash_merchant_id
JAZZCASH_PASSWORD=your_jazzcash_password
JAZZCASH_INTEGRITY_SALT=your_jazzcash_salt
JAZZCASH_SANDBOX=true

# Easypaisa Payment Gateway
EASYPAISA_STORE_ID=your_easypaisa_store_id
EASYPAISA_HASH_KEY=your_easypaisa_hash_key
EASYPAISA_SANDBOX=true

# Stripe (International Payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===== DELIVERY SERVICES =====
# Bykea Delivery Service
BYKEA_API_KEY=your_bykea_api_key
BYKEA_BASE_URL=https://api.bykea.pk/v1
BYKEA_SANDBOX=true

# Yango Delivery Service
YANGO_API_KEY=your_yango_api_key
YANGO_BASE_URL=https://api.yango.com/v1
YANGO_SANDBOX=true

# TCS Courier Service
TCS_API_KEY=your_tcs_api_key
TCS_USERNAME=your_tcs_username
TCS_PASSWORD=your_tcs_password
TCS_BASE_URL=https://api.tcs.com.pk/v1

# Leopards Courier Service
LEOPARDS_API_KEY=your_leopards_api_key
LEOPARDS_USERNAME=your_leopards_username
LEOPARDS_BASE_URL=https://api.leopardscourier.com/v1

# ===== EMAIL SERVICE =====
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourstore.com

# ===== SMS SERVICE =====
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ===== FILE STORAGE =====
# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===== AI SERVICES =====
# OpenAI (For AI Content Generation)
OPENAI_API_KEY=sk-your-openai-key

# ===== SOCIAL MEDIA APIS =====
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ===== GROCERY STORE SPECIFIC =====
# Store Configuration
STORE_NAME=Your Grocery Store
STORE_DESCRIPTION=Fresh groceries delivered to your doorstep
STORE_PHONE=+92-XXX-XXXXXXX
STORE_EMAIL=contact@yourstore.com
STORE_ADDRESS=Your Store Address, City, Pakistan

# Business Hours
STORE_OPEN_TIME=08:00
STORE_CLOSE_TIME=22:00
STORE_TIMEZONE=Asia/Karachi

# Delivery Configuration
MIN_ORDER_AMOUNT=500
FREE_DELIVERY_THRESHOLD=2000
DELIVERY_FEE=150
EXPRESS_DELIVERY_FEE=300

# Inventory Management
LOW_STOCK_THRESHOLD=10
AUTO_REORDER_ENABLED=false
STOCK_ALERT_EMAIL=inventory@yourstore.com

# ===== ANALYTICS & MONITORING =====
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# ===== DEVELOPMENT TOOLS =====
DEBUG=true
LOG_LEVEL=info