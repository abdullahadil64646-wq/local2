{
  "name": "saas-local-platform",
  "version": "1.0.0",
  "description": "Complete SaaS Platform for Pakistani Local Businesses - Social Media Automation + Ecommerce",
  "private": true,
  "scripts": {
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install", 
    "install:all": "npm run install:backend && npm run install:frontend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run build && serve -s frontend/build",
    "start": "npm run start:backend",
    "seed": "cd backend && npm run seed",
    "seed:demo": "cd backend && npm run seed:demo",
    "health": "cd backend && npm run health",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test": "npm run test:backend && npm run test:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "serve": "^14.2.1"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "saas",
    "ecommerce",
    "social-media", 
    "pakistan",
    "local-business",
    "automation"
  ],
  "author": "Abdullah Adil",
  "license": "MIT"
}
