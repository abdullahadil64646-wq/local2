# Docker Environment Variables
# Copy this to .env when using Docker

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here_2024
MONGODB_URI=mongodb://admin:your_secure_password_here_2024@mongodb:27017/saas-local-stores?authSource=admin

# Redis
REDIS_URL=redis://redis:6379

# JWT Secrets
JWT_SECRET=your-super-secure-jwt-secret-here-2024-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here-2024-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Server
NODE_ENV=production
PORT=5000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Email (Configure for production)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OpenAI (AI Content Generation)
OPENAI_API_KEY=sk-your-openai-key

# Social Media APIs
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Pakistani Payment Gateways
JAZZCASH_MERCHANT_ID=your_jazzcash_id
JAZZCASH_PASSWORD=your_jazzcash_password
EASYPAISA_STORE_ID=your_easypaisa_id

# Delivery Services
TCS_API_KEY=your_tcs_key
LEOPARDS_API_KEY=your_leopards_key
